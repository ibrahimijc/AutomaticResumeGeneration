{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Exceptions",
      "Serilog",
      "Serilog.Sinks.Async"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/server-.log",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 10000000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 2,
          "formatter": "Serilog.Formatting.Elasticsearch.ElasticsearchJsonFormatter,Serilog.Formatting.Elasticsearch"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId", "WithSpan" ],
    "Properties": {
      "Application": "InventorySyncService.API"
    }
  },
  "AllowedHosts": "*",
  "mongo": {
    "connectionString": "mongodb+srv://customresume:qjTf40rUGzWx1yhd@customizedresume.x99uqtq.mongodb.net/",
    "databaseName": "CustomizedResumeService",
    "options": {
      "readPreference": "secondaryPreferred",
      "maxStalenessSeconds": 120,
      "minConnectionPoolSize": 10,
      "maxConnectionPoolSize": 300,
      "maxConnectionIdleTime": 300,
      "maxConnectionLifeTime": 900
    }
  }
}
